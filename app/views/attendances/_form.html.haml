= form_for @attendance do |f|
  - if @attendance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attendance.errors.count, "error")} prohibited this attendance from being saved:"
      %ul
        - @attendance.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :viewed_from
    = f.text_field :viewed_from
  .field
    = f.label :shepherd
    = f.text_field :shepherd
  .actions
    = f.submit 'Save'
